<!-- Note that the animations may show red in Android Studio;
     however, they are present and working perfectly fine. -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.karpov.lab2.main.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.karpov.lab2.detail.DetailFragment"
        android:label="DetailFragment">
        <argument
            android:name="Key"
            app:argType="long" />
        <action
            android:id="@+id/action_detailFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
        <action
            android:id="@+id/action_detailFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.karpov.lab2.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.karpov.lab2.timer.TimerFragment"
        android:label="TimerFragment">
        <argument
            android:name="Key"
            app:argType="long" />
        <action
            android:id="@+id/action_timerFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <action
        android:id="@+id/action_global_timerFragment"
        app:destination="@+id/timerFragment"
        app:launchSingleTop="true" />
</navigation>
